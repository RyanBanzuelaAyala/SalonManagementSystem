


@Html.Partial("/Views/Shared/_PartialRowLine.cshtml")

<style>
    pre {
        font-family: 'Source Sans Pro', 'Helvetica Neue', Helvetica, Arial, sans-serif;
        border: none;
        white-space: pre-wrap;
        background-color: #f9fafc;
    }

    .clpre {
        background-color: #f9fafc;
        border: none;
        border-left: 1px solid #d2d6de;
    }


    option:empty {
        display: none;
    }

    .nNoo {
        margin-top: 5px;
        margin-bottom: 5px;
    }
</style>



<div class="row" ng-controller="ResetController" id="urr">


    <div class="col-md-12">

        <div class="box box-primary">
            <div class="box-header with-border">
                <div class="form-group box-title bg-purple" style="padding: 10px 20px 10px 10px; margin-top: -130px; margin-left: -10px; border-bottom-right-radius: 30px">
                    <h4 class="label no-padding"> Password Modification </h4>
                </div>
            </div>

            <div class="box-body bg-white">

                <div class="col-md-6">


                    <div class="form-group">
                        <label><small class="">*</small>Current Password : </label>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-envelope-o"></i></span>

                            <input class="form-control validate" type="password" id="cpassword">
                        </div>
                    </div>

                    <hr />

                    <div class="form-group">
                        <label><small class="">*</small>New Password : </label>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-envelope-o"></i></span>

                            <input class="form-control validate" type="password" id="npassword">
                        </div>
                    </div>


                    <div class="form-group">
                        <label><small class="">*</small>New Password : </label>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-envelope-o"></i></span>
                            
                            <input class="form-control validate" type="password" id="rpassword">
                            
                        </div>
                    </div>

                </div>

            </div>


            <hr />

            <div class="box-body">

                <div class="col-md-6">

                    <div class="form-group">

                        <button type="button" class="btn btn-default" onclick="angular.element(document.getElementById('urr')).scope().NewPassword();">Save User Information</button>

                    </div>

                </div>

            </div>

        </div>

    </div>


</div>

    