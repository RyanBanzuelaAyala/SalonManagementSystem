


<style>
    pre {
        font-family: 'Source Sans Pro', 'Helvetica Neue', Helvetica, Arial, sans-serif;
        border: none;
        white-space: pre-wrap;
        background-color: #f9fafc;
    }

    .clpre {
        background-color: #f9fafc;
        border: none;
        border-left: 1px solid #d2d6de;
    }


    option:empty {
        display: none;
    }

    .nNoo {
        margin-top: 5px;
        margin-bottom: 5px;
    }
</style>



<div class="row" ng-controller="ProductController" id="ppd">


    <div class="col-md-9">
        
        <div class="box box-primary">
            <div class="box-header with-border">
                <div class="form-group box-title bg-purple" style="padding: 10px 20px 10px 10px; margin-top: -130px; margin-left: -10px; border-bottom-right-radius: 30px">
                    <h4 class="label no-padding"> Product Information </h4>
                </div>
            </div>
            
        </div>

        <div class="box box-primary">

            <hr />

            <div class="box-body bg-white">

                <div class="col-md-6">

                    <div class="form-group">
                        <label dir="rtl"><small class="">*</small>الاسم العربي : </label>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-dot-circle-o"></i></span>
                            <input type="email" class="form-control validate" placeholder="ex. مستحضر صابون" id="arname">
                        </div>
                    </div>

                    <div class="form-group">
                        <label><small class="">*</small>English Name : </label>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa  fa-dot-circle-o"></i></span>
                            <input type="email" class="form-control validate" placeholder="ex. Shampoo" id="enname">
                        </div>
                    </div>

                </div>

                <div class="col-md-6">

                    <div class="form-group">
                        <label dir="rtl"><small class="">*</small>الاسم المختصر العربي : </label>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-dot-circle-o"></i></span>
                            <input type="email" class="form-control validate" placeholder="ex. مستحضر صابون" id="arshortname">
                        </div>
                    </div>

                    <div class="form-group">
                        <label><small class="">*</small>English Short Name : </label>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa  fa-dot-circle-o"></i></span>
                            <input type="email" class="form-control validate" placeholder="ex. Shampoo" id="enshortname">
                        </div>
                    </div>

                </div>

            </div>

        
            <hr />

            <div class="box-body bg-white">

                <div class="col-md-6">

                    <div class="form-group">
                        <label><small class="">*</small>Item Code : </label>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-dot-circle-o"></i></span>
                            <input type="email" class="form-control validate number" placeholder="ex. 1234xxxxxx" id="itemcode">
                        </div>
                    </div>

                    <div class="form-group">
                        <label><small class="">*</small>Barcode : </label>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa  fa-dot-circle-o"></i></span>
                            <input type="email" class="form-control validate number" placeholder="ex. 625100xxxxxx" id="barcode">
                        </div>
                    </div>

                    <hr />


                    <div class="form-group">
                        <label><small class="">*</small>Remarks : </label>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-dot-circle-o"></i></span>
                            <input type="email" class="form-control validate" id="remarks">
                        </div>
                    </div>


                </div>

                <div class="col-md-6">


                    <div class="form-group">
                        <label><small class="">*</small>Model Code/Number : </label>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa  fa-dot-circle-o"></i></span>
                            <input type="email" class="form-control validate" placeholder="ex. shampoo101" id="modelno">
                        </div>
                    </div>

                    <div class="form-group">
                        <label><small class="">*</small>Serial Number : </label>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa  fa-dot-circle-o"></i></span>
                            <input type="email" class="form-control validate number" placeholder="ex. 056425xxxxx" id="serialno">
                        </div>
                    </div>


                </div>

            </div>

        

            <hr />

            <div class="box-body bg-white">

                <div class="col-md-6">

                    <div class="form-group">
                        <label><small class="">*</small>Size : </label>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-dot-circle-o"></i></span>
                            <input type="email" class="form-control validate number" placeholder="ex. 120" id="size">
                        </div>
                    </div>

                </div>

                <div class="col-md-6">

                    <div class="form-group">
                        <label><small class="">*</small>Unit Measurement : </label>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa  fa-dot-circle-o"></i></span>
                            <input type="email" class="form-control validate" placeholder="ex. ML/GRAMS/KG" id="unit">
                        </div>
                    </div>

                </div>

            </div>

            <hr />

            <div class="box-body">

                <div class="col-md-6">

                    <div class="form-group">

                        <button type="button" class="btn btn-default" onclick="angular.element(document.getElementById('ppd')).scope().Process();">Save Product Information</button>

                    </div>

                </div>

            </div>

        </div>

    </div>
    
    <div class="col-md-3">

        <div class="box box-primary">
            <div class="box-header with-border">
                <div class="form-group box-title bg-purple" style="padding: 10px 20px 10px 10px; margin-top: -130px; margin-left: -10px; border-bottom-right-radius: 30px">
                    <h4 class="label no-padding"> Product Image </h4>
                </div>
            </div>

        </div>

        <div class="box box-primary">
            
            <div class="box-body bg-white">

                <div class="col-md-12">

                    <hr />

                    <div class="form-group">

                        <img class="img-responsive img-circle" style="margin-left: auto; margin-right: auto;" src="~/Content/img/product.png" />
                    </div>

                    <hr />

                    <div class="form-group">

                        <label>Upload Photo : </label>
                        <div class="input-group">
                            <input id="imgInpX" type="file" class="upload" name="file" accept="image/jpeg" />
                        </div>

                    </div>

                    <hr />

                </div>

            </div>

        </div>

    </div>

</div>

