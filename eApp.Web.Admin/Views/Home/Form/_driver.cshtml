<link href="~/Scripts/Javascript/plugins/ammap/ammap.css" rel="stylesheet" />
<script src="~/Scripts/Javascript/plugins/ammap/ammap.js"></script>
<script src="~/Scripts/Javascript/plugins/ammap/maps/js/saudiArabiaLow.js"></script>

<script>

    $(function () {
        
        getLocation();
        
        function getLocation() {
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(showPosition, showError);
            } else {
                console.log("Geolocation is not supported by this browser.");
            }
        }

        function showPosition(position) {

            var x = document.getElementById("vll");
            var y = document.getElementById("lll");

            var latlon = position.coords.latitude + "," + position.coords.longitude;

            x.innerHTML = position.coords.latitude;
            y.innerHTML = position.coords.longitude;
            
            _map(position.coords.latitude, position.coords.longitude);
                        
        }
        
        function showError(error) {
            switch (error.code) {
                case error.PERMISSION_DENIED:
                    console.log("User denied the request for Geolocation.");
                    break;
                case error.POSITION_UNAVAILABLE:
                    console.log("Location information is unavailable.");
                    break;
                case error.TIMEOUT:
                    console.log("The request to get user location timed out.");
                    break;
                case error.UNKNOWN_ERROR:
                    console.log("An unknown error occurred.");
                    break;
            }
        }

        $.notify({
            message: 'New! Change Status and Assign to User. Please kindly check..',
        }, {
                type: 'warning',
                placement: {
                    from: 'top',
                    align: 'right'
                },
                offset: {
                    x: 10,
                    y: 10
                },
                animate: {
                    enter: 'animated fadeInDown',
                    exit: 'animated fadeOutUp'
                },
                template: '<div data-notify="container" class="col-xs-4 col-sm-4 alert alert-{0}" role="alert">' +
                '<button type="button" aria-hidden="true" class="close" data-notify="dismiss">×</button>' +
                '<span data-notify="icon"></span> ' +
                '<span data-notify="title">{1}</span> ' +
                '<span data-notify="message">{2}</span>' +
                '<div class="progress" data-notify="progressbar">' +
                '<div class="progress-bar progress-bar-{0}" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%;"></div>' +
                '</div>' +
                '<a href="{3}" target="{4}" data-notify="url"></a>' +
                '</div>'
            });

        function _map(x, y) {


            // svg path for target icon
            var targetSVG = "M9,0C4.029,0,0,4.029,0,9s4.029,9,9,9s9-4.029,9-9S13.971,0,9,0z M9,15.93 c-3.83,0-6.93-3.1-6.93-6.93S5.17,2.07,9,2.07s6.93,3.1,6.93,6.93S12.83,15.93,9,15.93 M12.5,9c0,1.933-1.567,3.5-3.5,3.5S5.5,10.933,5.5,9S7.067,5.5,9,5.5 S12.5,7.067,12.5,9z";

            // svg path for plane icon
            var planeSVG = "m2,106h28l24,30h72l-44,-133h35l80,132h98c21,0 21,34 0,34l-98,0 -80,134h-35l43,-133h-71l-24,30h-28l15,-47";

            
            var map = AmCharts.makeChart("mapdiv", {
                type: "map",

                dataProvider: {
                    map: "saudiArabiaLow",
                    getAreasFromMap: true,
                    areas: [{
                        title: "Riyadh",
                        id: "SA-01",
                        color: "#DDDDDD",
                        description: "Riyadh is now selected.</br></br>Close this description box to unselect the area.",
                        svgPath: targetSVG,
                        zoomLevel: 5,
                        scale: 0.5
                    }, {
                        title: "Jeddah",
                        id: "SA-02",
                        color: "#DDDDDD",
                        description: "Jeddah is now selected.</br></br>Close this description box to unselect the area.",
                        svgPath: targetSVG,
                        zoomLevel: 5,
                        scale: 0.5,
                    }, {
                        title: "Madinah",
                        id: "SA-03",
                        color: "#DDDDDD",
                    }, {
                        title: "Khobar",
                        id: "SA-04",
                        color: "#DDDDDD",
                    }],
                    lines: [{
                        id: "line1",
                        arc: -0.85,
                        alpha: 0.3,
                        latitudes: [x],
                        longitudes: [y]
                    }],
                    images: [{
                        svgPath: targetSVG,
                        title: "Current Location",
                        latitude: x,
                        longitude: y
                    }, {
                        svgPath: planeSVG,
                        positionOnLine: 0,
                        color: "#585869",
                        animateAlongLine: true,
                        lineId: "line1",
                        flipDirection: true,
                        loop: true,
                        scale: 0.03,
                        positionScale: 1.8
                    }]
                },

                areasSettings: {
                    outlineThickness: 1,
                    autoZoom: true,
                    selectedColor: "#8986c1",
                    unlistedAreasColor: "#DDDDDD",
                    rollOverOutlineColor: "#FFFFFF",
                    rollOverColor: "#605ca8",
                },

                imagesSettings: {
                    rollOverColor: "#CC0000",
                    rollOverScale: 3,
                    selectedScale: 3,
                    selectedColor: "#ffc0cb",
                    color: "#585869",
                    //rollOverColor: "#585869",
                    //selectedColor: "#585869",
                    pauseDuration: 0.2,
                    animationDuration: 2.5,
                    adjustAnimationSpeed: true
                },

                linesSettings: {
                    color: "#585869",
                    alpha: 0.4
                }
            });


        }


    });


</script>
