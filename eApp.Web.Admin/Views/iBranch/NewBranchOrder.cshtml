




<style>
    pre {
        font-family: 'Source Sans Pro', 'Helvetica Neue', Helvetica, Arial, sans-serif;
        border: none;
        white-space: pre-wrap;
        background-color: #f9fafc;
    }

    .clpre {
        background-color: #f9fafc;
        border: none;
        border-left: 1px solid #d2d6de;
    }


    option:empty {
        display: none;
    }

    .nNoo {
        margin-top: 5px;
        margin-bottom: 5px;
    }
</style>



<div class="row" ng-controller="bkBranchController" id="bkbrc">


    <div class="col-md-9">

        <div class="box box-primary">
            <div class="box-header with-border">
                <div class="form-group box-title bg-purple" style="padding: 10px 20px 10px 10px; margin-top: -130px; margin-left: -10px; border-bottom-right-radius: 30px">
                    <h4 class="label no-padding"> Branch Order Information </h4>
                </div>
            </div>

        </div>

        <div class="box box-primary">

            <hr />

            <div class="box-body bg-white">

                <div class="col-md-12">

                    <div class="form-group">
                        <label>Select Services : </label>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-edit"></i></span>

                            <select class="form-control select2 validate" style="width: 100%; display: none" id="servicescode">

                                @if (ViewBag.RequestVeh != null)
                                {
                                    <option></option>

                                    foreach (var req in ViewBag.RequestVeh)
                                    {

                                        <option value="@req.servicescode">@req.servicename</option>

                                    }
                                }

                            </select>
                        </div>

                    </div>


                    <div class="form-group">
                        <label><small class="">*</small>Remarks : </label>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa  fa-dot-circle-o"></i></span>
                            <input type="email" class="form-control validate" id="remarks">
                        </div>
                    </div>

                </div>

            </div>


            <hr />

            <div class="box-body">

                <div class="col-md-6">

                    <div class="form-group">

                        <button type="button" class="btn btn-default" onclick="angular.element(document.getElementById('bkbrc')).scope().AddBranchOrder();">Submit Branch Order</button>

                    </div>

                </div>

            </div>

        </div>

    </div>

</div>


<script src="~/Scripts/Javascript/plugins/select2/select2.full.min.js"></script>
<link rel="stylesheet" href="~/Scripts/Javascript/plugins/select2/select2.min.css">
<script>
    $(document).ready(function () {

        $(".select2").select2();

    });
</script>
