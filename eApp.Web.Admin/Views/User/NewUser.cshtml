

<style>
    pre {
        font-family: 'Source Sans Pro', 'Helvetica Neue', Helvetica, Arial, sans-serif;
        border: none;
        white-space: pre-wrap;
        background-color: #f9fafc;
    }

    .clpre {
        background-color: #f9fafc;
        border: none;
        border-left: 1px solid #d2d6de;
    }


    option:empty {
        display: none;
    }

    .nNoo {
        margin-top: 5px;
        margin-bottom: 5px;
    }
</style>



<div class="row" ng-controller="UserController" id="ucc">

    <div class="col-md-7">

        <div class="box box-primary">
            <div class="box-header with-border">
                <div class="form-group box-title bg-purple" style="padding: 10px 20px 10px 10px; margin-top: -130px; margin-left: -10px; border-bottom-right-radius: 30px">
                    <h4 class="label no-padding"> User Information </h4>
                </div>
            </div>
        </div>

        <div class="box box-primary">

            <div class="box-body bg-white">

                <div class="form-group">
                    <label><small class="">*</small>User Id : </label>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-envelope-o"></i></span>
                        <input type="email" class="form-control validate" placeholder="ex. 330018" id="userid">
                    </div>
                </div>

                <div class="form-group">
                    <label><small class="">*</small>Full Name : </label>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-envelope-o"></i></span>
                        <input type="email" class="form-control validate" placeholder="ex. Joe Foe" id="name">
                    </div>
                </div>

                <hr />

                <div class="form-group">
                    <label><small class="">*</small> User Role : </label>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-user-secret"></i></span>
                        <select class="form-control validate" id="role">
                            <optgroup label="USERS">
                                <option>Agent</option>
                                <option>Specialist</option>
                                <option>Employee</option>
                                <option>Supervisor</option>
                                <option>Manager</option>
                            </optgroup>
                            <optgroup label="EXECUTIVE">
                                <option>Administrator</option>
                            </optgroup>
                        </select>
                    </div>
                </div>

            </div>


            <hr />

            <div class="box-body">

                <div class="form-group">

                    <button type="button" class="btn btn-default" onclick="angular.element(document.getElementById('ucc')).scope().Process();">Save User Information</button>

                </div>

            </div>
        </div>

    </div>
    
    <div class="col-md-3">

        <div class="box box-primary">
            <div class="box-header with-border">
                <div class="form-group box-title bg-purple" style="padding: 10px 20px 10px 10px; margin-top: -130px; margin-left: -10px; border-bottom-right-radius: 30px">
                    <h4 class="label no-padding"> User Image </h4>
                </div>
            </div>

        </div>

        <div class="box box-primary">

            <div class="box-body bg-white">

                <div class="col-md-12">

                    <hr />

                    <div class="form-group">

                        <img class="img-responsive img-circle" style="margin-left: auto; margin-right: auto;" src="~/Content/img/user.png" />
                    </div>

                    <hr />

                    <div class="form-group">

                        <label>Upload Photo : </label>
                        <div class="input-group">
                            <input id="imgInpX" type="file" class="upload" name="file" accept="image/jpeg" />
                        </div>

                    </div>

                    <hr />

                </div>

            </div>

        </div>

    </div>
    
</div>

