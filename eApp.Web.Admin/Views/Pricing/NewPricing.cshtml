

<style>
    pre {
        font-family: 'Source Sans Pro', 'Helvetica Neue', Helvetica, Arial, sans-serif;
        border: none;
        white-space: pre-wrap;
        background-color: #f9fafc;
    }

    .clpre {
        background-color: #f9fafc;
        border: none;
        border-left: 1px solid #d2d6de;
    }


    option:empty {
        display: none;
    }

    .nNoo {
        margin-top: 5px;
        margin-bottom: 5px;
    }
</style>



<div class="row" ng-controller="PricingController" id="prc">


    <div class="col-md-9">

        <div class="box box-primary">
            <div class="box-header with-border">
                <div class="form-group box-title bg-purple" style="padding: 10px 20px 10px 10px; margin-top: -130px; margin-left: -10px; border-bottom-right-radius: 30px">
                    <h4 class="label no-padding"> Product Pricing Information </h4>
                </div>
            </div>
        </div>

        <div class="box box-primary">

            <hr />

            @if (ViewBag.Product != null)
            {
                <div class="box-body bg-white">

                    <div class="col-md-6">

                        <div class="form-group">
                            <label><small class="">*</small>Item Code : </label>
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-dot-circle-o"></i></span>
                                <input type="text" class="form-control" value="@ViewBag.Product.itemcode" readonly>
                            </div>
                        </div>

                    </div>

                    <div class="col-md-6">

                        <div class="form-group">
                            <label><small class="">*</small>Produc Name : </label>
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-dot-circle-o"></i></span>
                                <input type="text" class="form-control" value="@ViewBag.Product.arname - @ViewBag.Product.enname" readonly>
                            </div>
                        </div>

                    </div>

                </div>

                <hr />

                <div class="box-body bg-white">

                    <input type="hidden" id="itemcode" value="@ViewBag.Product.itemcode" />

                    <div class="col-md-6">

                        <div class="form-group">
                            <label><small class="">*</small>Purchasing Price : </label>
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-dot-circle-o"></i></span>
                                <input type="email" class="form-control validate numeric" placeholder="ex. 1234xxxxxx" id="purchasingprice">
                            </div>
                        </div>

                        <div class="form-group">
                            <label><small class="">*</small>Selling Price : </label>
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa  fa-dot-circle-o"></i></span>
                                <input type="email" class="form-control validate numeric" placeholder="ex. 625100xxxxxx" id="sellingprice">
                            </div>
                        </div>


                    </div>

                    <div class="col-md-6">

                        <div class="form-group">
                            <label><small class="">*</small>Price with VAT : </label>
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-dot-circle-o"></i></span>
                                <input type="email" class="form-control validate numeric" placeholder="ex. 1234xxxxxx" id="vatprice">
                            </div>
                        </div>

                        <div class="form-group">
                            <label><small class="">*</small>Remarks : </label>
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-dot-circle-o"></i></span>
                                <input type="email" class="form-control validate" id="remarks">
                            </div>
                        </div>

                    </div>

                </div>

                <hr />

                <div class="box-body">

                    <div class="col-md-6">

                        <div class="form-group">

                            <button type="button" class="btn btn-default" onclick="angular.element(document.getElementById('prc')).scope().Process();">Save Pricing Information</button>

                        </div>

                    </div>

                </div>

            }

        </div>


    </div>


    <div class="col-md-3">

        <div class="box box-primary">
            <div class="box-header with-border">
                <div class="form-group box-title bg-purple" style="padding: 10px 20px 10px 10px; margin-top: -130px; margin-left: -10px; border-bottom-right-radius: 30px">
                    <h4 class="label no-padding"> Product Photo </h4>
                </div>
            </div>
        </div>

        <div class="box box-primary">

            @if (ViewBag.Product != null)
            {

                <div class="box-body bg-white">

                    <input type="hidden" id="itemcode" value="@ViewBag.Product.itemcode" />

                    <div class="col-md-12">

                        <hr />

                        <div class="form-group">

                            @if (ViewBag.ProductImg == null)
                            {
                                <img class="img-responsive img-circle" style="margin-left: auto; margin-right: auto;" src="~/Content/img/product.png" />
                            }
                            else
                            {
                                <img class="img-responsive img-circle" style="margin-left: auto; margin-right: auto;" src="~/Uploadpic/@("thmb" + @ViewBag.ProductImg + ".jpg?date=" + DateTime.Now.ToString("ddyyhhmmss"))" />
                            }

                        </div>

                        <hr />

                    </div>

                </div>

            }

        </div>

    </div>


</div>

<script src="~/Scripts/Modularize/System/iChange.js"></script>

<script>
    $(document).ready(function () {

        iChange.init();
        
    });
</script>
